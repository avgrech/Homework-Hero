@page "/login"
@using System.ComponentModel.DataAnnotations
@inject HttpClient Http
@inject AuthState Auth

<h1>Login</h1>
<p>Sign in as a student, teacher, or admin to continue.</p>

<EditForm Model="loginModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="card">
        <label>Email or username</label>
        <InputText @bind-Value="loginModel.Identifier" />

        <label>Password</label>
        <InputText @bind-Value="loginModel.Password" Type="password" />

        <button type="submit">Login</button>
    </div>
</EditForm>

@if (!string.IsNullOrEmpty(message))
{
    <p class="@(loginSuccess ? "text-success" : "text-error")">@message</p>
}

@if (requiresReset)
{
    <h3>Reset your password</h3>
    <p>Enter a new password to finish signing in.</p>
    <EditForm Model="resetModel" OnValidSubmit="ResetPassword">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="card">
            <label>Current password</label>
            <InputText @bind-Value="resetModel.CurrentPassword" Type="password" />

            <label>New password</label>
            <InputText @bind-Value="resetModel.NewPassword" Type="password" />

            <button type="submit">Update password</button>
        </div>
    </EditForm>
}

@if (Auth.IsAuthenticated)
{
    <p>Signed in as <strong>@Auth.Email</strong> with role <strong>@Auth.Role</strong>.</p>
}

@code {
    private readonly LoginModel loginModel = new();
    private readonly ResetPasswordModel resetModel = new();
    private string? message;
    private bool loginSuccess;
    private bool requiresReset;

    private async Task HandleLogin()
    {
        message = null;
        loginSuccess = false;

        var response = await Http.PostAsJsonAsync("api/auth/login", new LoginRequest(loginModel.Identifier, loginModel.Password));
        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<LoginResponse>();
            if (result?.Success == true && !string.IsNullOrEmpty(result.Role))
            {
                Auth.SetUser(loginModel.Identifier, result.Role);
                loginSuccess = true;
                requiresReset = result.RequiresPasswordReset;
                message = requiresReset
                    ? "Password reset required before continuing."
                    : $"Welcome back, {loginModel.Identifier}! Role: {result.Role}";
                resetModel.Identifier = loginModel.Identifier;
                resetModel.CurrentPassword = loginModel.Password;
            }
            else
            {
                message = result?.Message ?? "Unable to login";
            }
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            message = "User not found";
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            message = "Invalid credentials";
        }
        else
        {
            message = "Unexpected error while logging in";
        }
    }

    private class LoginModel
    {
        [Required]
        public string Identifier { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }

    private async Task ResetPassword()
    {
        var response = await Http.PostAsJsonAsync("api/auth/reset-password", new ResetPasswordRequest(resetModel.Identifier, resetModel.CurrentPassword, resetModel.NewPassword));
        if (response.IsSuccessStatusCode)
        {
            requiresReset = false;
            message = "Password updated. Please log in with your new password.";
            Auth.Clear();
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            message = "Current password is incorrect.";
        }
        else
        {
            message = "Unable to reset password.";
        }
    }

    private class ResetPasswordModel
    {
        [Required]
        public string Identifier { get; set; } = string.Empty;

        [Required]
        public string CurrentPassword { get; set; } = string.Empty;

        [Required]
        [StringLength(100, MinimumLength = 6)]
        public string NewPassword { get; set; } = string.Empty;
    }
}
