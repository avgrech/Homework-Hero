@page "/homework"
@inject HttpClient Http
@inject AuthState Auth
@inject IJSRuntime JS

@implements IAsyncDisposable

<div class="page-header">
    <div>
        <h1>Homework</h1>
        <p>Assign homework to a group or specific student.</p>
    </div>
    @if (CanCreateHomework)
    {
        <button class="primary" @onclick="OpenCreateModal">Create homework</button>
    }
</div>

@if (!string.IsNullOrWhiteSpace(accessMessage))
{
    <p>@accessMessage</p>
}
else if (showCreateModal)
{
    <div class="modal-backdrop" @onclick="CloseCreateModal">
        <div class="modal-panel" @onclick:stopPropagation>
            <header class="modal-header">
                <div>
                    <p class="eyebrow">Create homework</p>
                    <h3>Craft a new assignment</h3>
                </div>
                <button class="ghost" @onclick="CloseCreateModal" aria-label="Close">✕</button>
            </header>

            <EditForm Model="newHomework" OnValidSubmit="CreateHomework" class="stacked-form">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-row">
                    <label for="title">Title</label>
                    <InputText id="title" class="text-input" @bind-Value="newHomework.Title" />
                </div>

                <div class="form-row">
                    <label for="subject">Subject</label>
                    <InputSelect id="subject" class="text-input" @bind-Value="newHomework.Subject">
                        @foreach (var subject in subjects)
                        {
                            <option value="@subject">@subject</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-row">
                    <label for="textContent">Text content</label>
                    <textarea id="textContent" class="text-input rich-input" @ref="textEditorElement"></textarea>
                </div>

                <div class="form-row">
                    <label for="imageUpload">Image</label>
                    <InputFile id="imageUpload" OnChange="HandleImageUpload" />
                    @if (isUploadingImage)
                    {
                        <p class="muted">Uploading image...</p>
                    }
                    @if (!string.IsNullOrWhiteSpace(uploadError))
                    {
                        <p class="error">@uploadError</p>
                    }
                    @if (!string.IsNullOrWhiteSpace(newHomework.ImageUrl))
                    {
                        <p class="muted">Uploaded: <a href="@newHomework.ImageUrl" target="_blank">View image</a></p>
                    }
                </div>

                <div class="form-row">
                    <label>Date given</label>
                    <InputDate class="text-input" TValue="DateOnly" @bind-Value="newHomework.DateAssigned" />
                </div>

                <div class="form-row">
                    <label>Due date</label>
                    <InputDate class="text-input" TValue="DateOnly" @bind-Value="newHomework.DueDate" />
                </div>

                <div class="form-row">
                    <label>Teacher</label>
                    <InputText class="text-input" @bind-Value="teacherSearch" placeholder="Search teachers" />
                    <InputSelect class="text-input" @bind-Value="newHomework.TeacherId" @onchange="OnTeacherChanged" disabled="@IsTeacher">
                        <option value="">Select a teacher</option>
                        @foreach (var teacher in FilteredTeachers)
                        {
                            <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-row">
                    <label>Group (optional)</label>
                    <InputText class="text-input" @bind-Value="groupSearch" placeholder="Search groups" />
                    <InputSelect class="text-input" @bind-Value="newHomework.AssignedGroupId">
                        <option value="">Select a group</option>
                        @foreach (var group in FilteredGroups)
                        {
                            <option value="@group.GroupId">@group.GroupId (@group.Students.Count student(s))</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-row">
                    <label>Student Id (optional)</label>
                    <InputText class="text-input" @bind-Value="studentSearch" placeholder="Search students" />
                    <InputSelect class="text-input" @bind-Value="newHomework.AssignedStudentId">
                        <option value="">Assign to any student</option>
                        @foreach (var student in FilteredStudents)
                        {
                            <option value="@student.Id">@student.FirstName @student.LastName (@student.Id)</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-actions">
                    <button type="button" class="ghost" @onclick="CloseCreateModal">Cancel</button>
                    <button type="submit" class="primary">Save homework</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@if (!string.IsNullOrWhiteSpace(accessMessage))
{
    <p>@accessMessage</p>
}
else if (!homeworkItems.Any())
{
    <p>No homework yet.</p>
}
else
{
    @foreach (var hw in homeworkItems)
    {
        <div class="card">
            <h3>@hw.Title</h3>
            <p><strong>Subject:</strong> @hw.Subject</p>
            <p><strong>Due:</strong> @hw.DueDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Teacher Id:</strong> @hw.TeacherId</p>
            <p><strong>Group:</strong> @hw.AssignedGroupId</p>
            <p><strong>Student:</strong> @hw.AssignedStudentId</p>
            <p><strong>Date given:</strong> @hw.DateAssigned</p>
            <p><strong>Due date:</strong> @hw.DueDate</p>
            <p><strong>Submissions:</strong> @GetSubmittedCount(hw) submitted • @GetPendingCount(hw) pending</p>
            @if (!IsStudent)
            {
                
                <button class="secondary" @onclick="() => OpenResultsModal(hw)">View student homework</button>
            }
            <div class="homework-content">@RenderHtml(hw.TextContent)</div>
            @if (!string.IsNullOrWhiteSpace(hw.ImageUrl))
            {
                <p><a href="@hw.ImageUrl" target="_blank">View image</a></p>
            }
        </div>
    }
}

@if (showSubmittedModal && selectedHomework is not null)
{
    <div class="modal-backdrop" @onclick="CloseSubmittedModal">
        <div class="modal-panel" @onclick:stopPropagation>
            <header class="modal-header">
                <div>
                    <p class="eyebrow">Submitted homework</p>
                    <h3>@selectedHomework.Title</h3>
                </div>
                <button class="ghost" @onclick="CloseSubmittedModal" aria-label="Close">✕</button>
            </header>

            @if (!submittedStudentNames.Any())
            {
                <p>No submissions yet.</p>
            }
            else
            {
                <ul class="stacked-form">
                    @foreach (var studentName in submittedStudentNames)
                    {
                        <li class="card">@studentName</li>
                    }
                </ul>
            }
        </div>
    </div>
}

@if (showResultsModal && selectedHomework is not null)
{
    <div class="modal-backdrop" @onclick="CloseResultsModal">
        <div class="modal-panel" @onclick:stopPropagation>
            <header class="modal-header">
                <div>
                    <p class="eyebrow">Student submissions</p>
                    <h3>@selectedHomework.Title</h3>
                </div>
                <button class="ghost" @onclick="CloseResultsModal" aria-label="Close">✕</button>
            </header>

            @if (!selectedResults.Any())
            {
                <p>No submissions yet.</p>
            }
            else
            {
                <div class="stacked-form">
                    @foreach (var result in selectedResults)
                    {
                        <div class="card">
                            <p><strong>@result.StudentName</strong></p>
                            <p class="muted">Submitted @result.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</p>
                            <button class="primary" @onclick="() => OpenCorrectionModal(result)">Correct homework</button>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}

@if (showCorrectionModal && selectedHomework is not null && selectedSubmission is not null)
{
    <div class="modal-backdrop" @onclick="CloseCorrectionModal">
        <div class="modal-panel" @onclick:stopPropagation>
            <header class="modal-header">
                <div>
                    <p class="eyebrow">Correction</p>
                    <h3>@selectedSubmission.StudentName</h3>
                </div>
                <button class="ghost" @onclick="CloseCorrectionModal" aria-label="Close">✕</button>
            </header>

            <div class="stacked-form">
                <div>
                    <p class="muted">Homework</p>
                    <div class="homework-content">@RenderHtml(selectedHomework.TextContent)</div>
                </div>
                <div>
                    <p class="muted">Submission</p>
                    @if (!string.IsNullOrWhiteSpace(selectedSubmission.ResultText))
                    {
                        <div class="homework-content">@RenderHtml(selectedSubmission.ResultText)</div>
                    }
                    else
                    {
                        <p>No written submission.</p>
                    }
                    @if (!string.IsNullOrWhiteSpace(selectedSubmission.ResultImageUrl))
                    {
                        <p><a href="@selectedSubmission.ResultImageUrl" target="_blank">View submitted image</a></p>
                    }
                </div>
            </div>

            <EditForm Model="correctionForm" OnValidSubmit="SubmitCorrection" class="stacked-form">
                <div class="form-row">
                    <label>Mark</label>
                    <InputNumber class="text-input" TValue="decimal?" @bind-Value="correctionForm.Mark" />
                </div>
                <div class="form-row">
                    <label>Notes</label>
                    <InputTextArea class="text-input" @bind-Value="correctionForm.Notes" />
                </div>
                @if (!string.IsNullOrWhiteSpace(correctionStatus))
                {
                    <p class="muted">@correctionStatus</p>
                }
                <div class="form-actions">
                    <button type="button" class="ghost" @onclick="CloseCorrectionModal">Cancel</button>
                    <button type="submit" class="primary" disabled="@isSavingCorrection">Save correction</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private List<Teacher> teachers = new();
    private List<HomeworkItem> homeworkItems = new();
    private List<GroupSummaryDto> groups = new();
    private List<StudentSummaryDto> students = new();
    private List<StudentSummaryDto> allStudents = new();
    private readonly Dictionary<int, List<HomeworkResultStudentDto>> homeworkResults = new();
    private static readonly List<string> subjects = new() { "Math", "Science", "History", "Language Arts", "Social Studies", "Art", "Music", "PE", "Other" };

    private HomeworkItem newHomework = new()
    {
        DateAssigned = DateOnly.FromDateTime(DateTime.UtcNow),
        DueDate = DateOnly.FromDateTime(DateTime.UtcNow).AddDays(7),
        Subject = subjects.First()
    };

    private string? accessMessage;

    private string teacherSearch = string.Empty;
    private string groupSearch = string.Empty;
    private string studentSearch = string.Empty;
    private bool isUploadingImage;
    private string? uploadError;
    private bool showCreateModal;
    private bool shouldInitializeEditor;
    private bool editorInitialized;
    private ElementReference textEditorElement;
    private DotNetObjectReference<Homework>? dotNetRef;
    private HomeworkItem? selectedHomework;
    private List<HomeworkResultStudentDto> selectedResults = new();
    private HomeworkResultStudentDto? selectedSubmission;
    private bool showResultsModal;
    private bool showSubmittedModal;
    private bool showCorrectionModal;
    private CorrectionForm correctionForm = new();
    private bool isSavingCorrection;
    private string? correctionStatus;
    private List<string> submittedStudentNames = new();

    private IEnumerable<Teacher> FilteredTeachers => teachers
        .Where(t => t.Id == newHomework.TeacherId
            || string.IsNullOrWhiteSpace(teacherSearch)
            || $"{t.FirstName} {t.LastName}".Contains(teacherSearch, StringComparison.OrdinalIgnoreCase)
            || (!string.IsNullOrWhiteSpace(t.Email) && t.Email.Contains(teacherSearch, StringComparison.OrdinalIgnoreCase)));

    private IEnumerable<GroupSummaryDto> FilteredGroups => groups
        .Where(g => g.GroupId == newHomework.AssignedGroupId
            || string.IsNullOrWhiteSpace(groupSearch)
            || g.GroupId.Contains(groupSearch, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<StudentSummaryDto> FilteredStudents => students
        .Where(s => s.Id == newHomework.AssignedStudentId
            || string.IsNullOrWhiteSpace(studentSearch)
            || $"{s.FirstName} {s.LastName}".Contains(studentSearch, StringComparison.OrdinalIgnoreCase)
            || s.Id.ToString().Contains(studentSearch, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        if (IsStudent)
        {
            accessMessage = "Students can view their assignments from the Homework page.";
            homeworkItems.Clear();
            return;
        }

        if (IsTeacher && !Auth.TeacherId.HasValue)
        {
            accessMessage = "No teacher profile is linked to this account.";
            homeworkItems.Clear();
            return;
        }

        await LoadStudents();
        await LoadTeachers();
        await LoadHomework();
        await LoadHomeworkResults();
    }

    private async Task LoadTeachers()
    {
        teachers = await Http.GetFromJsonAsync<List<Teacher>>("api/teachers") ?? new();

        if (IsTeacher && Auth.TeacherId.HasValue)
        {
            teachers = teachers.Where(t => t.Id == Auth.TeacherId.Value).ToList();
            newHomework.TeacherId = Auth.TeacherId.Value;
            await LoadGroupsForTeacher(newHomework.TeacherId);
            return;
        }

        if (teachers.Any() && newHomework.TeacherId == 0)
        {
            newHomework.TeacherId = teachers.First().Id;
            await LoadGroupsForTeacher(newHomework.TeacherId);
        }
    }

    private async Task LoadStudents()
    {
        List<Student> studentEntities;
        if (IsTeacher && Auth.TeacherId.HasValue)
        {
            studentEntities = await Http.GetFromJsonAsync<List<Student>>($"api/teachers/{Auth.TeacherId.Value}/students") ?? new();
        }
        else
        {
            studentEntities = await Http.GetFromJsonAsync<List<Student>>("api/students") ?? new();
        }
        allStudents = studentEntities
            .Select(s => new StudentSummaryDto
            {
                Id = s.Id,
                FirstName = s.FirstName,
                LastName = s.LastName,
                IsChatBlocked = s.IsChatBlocked
            })
            .ToList();

        students = new(allStudents);
    }

    private async Task LoadHomework()
    {
        if (IsTeacher && Auth.TeacherId.HasValue)
        {
            homeworkItems = await Http.GetFromJsonAsync<List<HomeworkItem>>($"api/homework/teacher/{Auth.TeacherId.Value}") ?? new();
            return;
        }

        homeworkItems = await Http.GetFromJsonAsync<List<HomeworkItem>>("api/homework") ?? new();
    }

    private async Task LoadHomeworkResults()
    {
        homeworkResults.Clear();

        var tasks = homeworkItems.Select(async item =>
        {
            var results = await Http.GetFromJsonAsync<List<HomeworkResultStudentDto>>($"api/homework/{item.Id}/results") ?? new();
            return (item.Id, Results: results);
        });

        var resultsByHomework = await Task.WhenAll(tasks);
        foreach (var entry in resultsByHomework)
        {
            homeworkResults[entry.Id] = entry.Results;
        }
    }

    private async Task CreateHomework()
    {
        if (!CanCreateHomework)
        {
            return;
        }

        if (IsTeacher && Auth.TeacherId.HasValue)
        {
            newHomework.TeacherId = Auth.TeacherId.Value;
        }

        var selectedTeacherId = newHomework.TeacherId;
        var response = await Http.PostAsJsonAsync("api/homework", newHomework);
        if (response.IsSuccessStatusCode)
        {
            var created = await response.Content.ReadFromJsonAsync<HomeworkItem>();
            if (created is not null)
            {
                homeworkItems.Add(created);
                homeworkResults[created.Id] = new List<HomeworkResultStudentDto>();
                newHomework = new()
                {
                    DateAssigned = DateOnly.FromDateTime(DateTime.UtcNow),
                    DueDate = DateOnly.FromDateTime(DateTime.UtcNow).AddDays(7),
                    TeacherId = selectedTeacherId,
                    Subject = subjects.First()
                };
                groupSearch = string.Empty;
                studentSearch = string.Empty;
                newHomework.AssignedGroupId = string.Empty;
                newHomework.AssignedStudentId = null;
                newHomework.ImageUrl = null;
                await LoadGroupsForTeacher(selectedTeacherId);
                if (editorInitialized)
                {
                    await JS.InvokeVoidAsync("homeworkEditor.updateData", textEditorElement, newHomework.TextContent ?? string.Empty);
                }
                await CloseCreateModal();
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (showCreateModal && shouldInitializeEditor)
        {
            dotNetRef ??= DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("homeworkEditor.init", textEditorElement, newHomework.TextContent ?? string.Empty, dotNetRef);
            editorInitialized = true;
            shouldInitializeEditor = false;
        }
    }

    private void OpenCreateModal()
    {
        uploadError = null;
        isUploadingImage = false;
        showCreateModal = true;
        shouldInitializeEditor = true;
    }

    private async Task CloseCreateModal()
    {
        showCreateModal = false;
        await DisposeEditorAsync();
    }

    [JSInvokable]
    public void OnEditorChanged(string content)
    {
        newHomework.TextContent = content;
    }

    private async Task DisposeEditorAsync()
    {
        if (editorInitialized)
        {
            try
            {
                await JS.InvokeVoidAsync("homeworkEditor.dispose", textEditorElement);
            }
            catch
            {
                // Ignored: disposal should not break the page if JS resources are unavailable.
            }
        }

        editorInitialized = false;
        shouldInitializeEditor = false;

        dotNetRef?.Dispose();
        dotNetRef = null;
    }

    public async ValueTask DisposeAsync()
    {
        await DisposeEditorAsync();
    }

    private async Task LoadGroupsForTeacher(int teacherId)
    {
        if (IsTeacher && Auth.TeacherId.HasValue)
        {
            teacherId = Auth.TeacherId.Value;
        }

        if (teacherId == 0)
        {
            groups.Clear();
            students = new(allStudents);
            return;
        }

        groups = await Http.GetFromJsonAsync<List<GroupSummaryDto>>($"api/teachers/{teacherId}/groups") ?? new();
        var teacherStudents = groups
            .SelectMany(g => g.Students)
            .GroupBy(s => s.Id)
            .Select(g => g.First())
            .ToList();

        students = teacherStudents.Any() ? teacherStudents : new(allStudents);
        newHomework.AssignedGroupId = string.Empty;
        newHomework.AssignedStudentId = null;
    }

    private async Task OnTeacherChanged(ChangeEventArgs args)
    {
        if (IsTeacher && Auth.TeacherId.HasValue)
        {
            newHomework.TeacherId = Auth.TeacherId.Value;
            await LoadGroupsForTeacher(newHomework.TeacherId);
            return;
        }

        if (int.TryParse(args.Value?.ToString(), out var teacherId))
        {
            newHomework.TeacherId = teacherId;
            await LoadGroupsForTeacher(teacherId);
        }
        else
        {
            newHomework.TeacherId = 0;
            groups.Clear();
            students = new(allStudents);
        }
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        uploadError = null;
        isUploadingImage = true;

        try
        {
            var file = e.File;
            if (file is null)
            {
                uploadError = "Please select a file.";
                return;
            }

            using var content = new MultipartFormDataContent();
            await using var stream = file.OpenReadStream(10 * 1024 * 1024);
            var fileContent = new StreamContent(stream);
            fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue(file.ContentType);
            content.Add(fileContent, "file", file.Name);

            var response = await Http.PostAsync("api/uploads", content);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<UploadResponse>();
                newHomework.ImageUrl = result?.Url;
            }
            else
            {
                uploadError = "Upload failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            uploadError = $"Upload failed: {ex.Message}";
        }
        finally
        {
            isUploadingImage = false;
        }
    }

    private class UploadResponse
    {
        public string? Url { get; set; }
    }

    private bool IsTeacher => string.Equals(Auth.Role, "Teacher", StringComparison.OrdinalIgnoreCase);
    private bool IsStudent => string.Equals(Auth.Role, "Student", StringComparison.OrdinalIgnoreCase);
    private bool CanCreateHomework => !IsStudent && (!IsTeacher || Auth.TeacherId.HasValue);

    private int GetSubmittedCount(HomeworkItem item)
    {
        return homeworkResults.TryGetValue(item.Id, out var results) ? results.Count : 0;
    }

    private int GetPendingCount(HomeworkItem item)
    {
        var assigned = GetAssignedStudents(item);
        var submittedIds = homeworkResults.TryGetValue(item.Id, out var results)
            ? results.Select(r => r.StudentId).ToHashSet()
            : new HashSet<int>();

        var pendingCount = assigned.Count(s => !submittedIds.Contains(s.Id));
        return pendingCount;
    }

    private List<StudentSummaryDto> GetAssignedStudents(HomeworkItem item)
    {
        if (item.AssignedStudentId.HasValue)
        {
            return allStudents.Where(s => s.Id == item.AssignedStudentId.Value).ToList();
        }

        if (!string.IsNullOrWhiteSpace(item.AssignedGroupId))
        {
            var group = groups.FirstOrDefault(g => g.GroupId == item.AssignedGroupId);
            if (group is not null)
            {
                return new List<StudentSummaryDto>(group.Students);
            }
        }

        return new List<StudentSummaryDto>(allStudents);
    }

    private async Task OpenResultsModal(HomeworkItem item)
    {
        selectedHomework = item;
        showResultsModal = true;
        await RefreshHomeworkResults(item.Id);
        selectedResults = homeworkResults.TryGetValue(item.Id, out var results)
            ? new List<HomeworkResultStudentDto>(results)
            : new List<HomeworkResultStudentDto>();
    }

    private void CloseResultsModal()
    {
        showResultsModal = false;
        showCorrectionModal = false;
        selectedHomework = null;
        selectedResults = new();
    }

    private async Task OpenSubmittedModal(HomeworkItem item)
    {
        selectedHomework = item;
        showSubmittedModal = true;
        await RefreshHomeworkResults(item.Id);
        submittedStudentNames = homeworkResults.TryGetValue(item.Id, out var results)
            ? results.Select(r => r.StudentName).ToList()
            : new List<string>();
    }

    private void CloseSubmittedModal()
    {
        showSubmittedModal = false;
        selectedHomework = null;
        submittedStudentNames = new();
    }

    private void OpenCorrectionModal(HomeworkResultStudentDto result)
    {
        selectedSubmission = result;
        correctionForm = new CorrectionForm();
        correctionStatus = null;
        showCorrectionModal = true;
    }

    private void CloseCorrectionModal()
    {
        showCorrectionModal = false;
        selectedSubmission = null;
        correctionForm = new CorrectionForm();
    }

    private async Task RefreshHomeworkResults(int homeworkId)
    {
        var results = await Http.GetFromJsonAsync<List<HomeworkResultStudentDto>>($"api/homework/{homeworkId}/results") ?? new();
        homeworkResults[homeworkId] = results;
    }

    private async Task SubmitCorrection()
    {
        if (!IsTeacher || !Auth.TeacherId.HasValue || selectedSubmission is null)
        {
            return;
        }

        isSavingCorrection = true;
        correctionStatus = null;

        var request = new StudentCorrectionRequest(correctionForm.Mark, correctionForm.Notes, Auth.TeacherId.Value);
        var response = await Http.PostAsJsonAsync($"api/homework-results/{selectedSubmission.HomeworkResultId}/corrections", request);

        if (response.IsSuccessStatusCode)
        {
            correctionStatus = "Correction saved.";
        }
        else
        {
            correctionStatus = "We couldn't save that correction. Please try again.";
        }

        isSavingCorrection = false;
    }

    private MarkupString RenderHtml(string? content)
    {
        if (string.IsNullOrWhiteSpace(content))
        {
            return new MarkupString(string.Empty);
        }

        return new MarkupString(content);
    }

    private class CorrectionForm
    {
        public decimal? Mark { get; set; }
        public string? Notes { get; set; }
    }
}
