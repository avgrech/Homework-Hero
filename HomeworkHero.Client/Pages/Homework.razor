@page "/homework"
@inject HttpClient Http
@inject AuthState Auth
@inject IJSRuntime JS

@implements IAsyncDisposable

<div class="page-header">
    <div>
        <h1>Homework</h1>
        <p>Assign homework to a group or specific student.</p>
    </div>
    <button class="primary" @onclick="OpenCreateModal">Create homework</button>
</div>

@if (showCreateModal)
{
    <div class="modal-backdrop" @onclick="CloseCreateModal">
        <div class="modal-panel" @onclick:stopPropagation>
            <header class="modal-header">
                <div>
                    <p class="eyebrow">Create homework</p>
                    <h3>Craft a new assignment</h3>
                </div>
                <button class="ghost" @onclick="CloseCreateModal" aria-label="Close">âœ•</button>
            </header>

            <EditForm Model="newHomework" OnValidSubmit="CreateHomework" class="stacked-form">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-row">
                    <label for="title">Title</label>
                    <InputText id="title" class="text-input" @bind-Value="newHomework.Title" />
                </div>

                <div class="form-row">
                    <label for="subject">Subject</label>
                    <InputSelect id="subject" class="text-input" @bind-Value="newHomework.Subject">
                        @foreach (var subject in subjects)
                        {
                            <option value="@subject">@subject</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-row">
                    <label for="textContent">Text content</label>
                    <textarea id="textContent" class="text-input rich-input" @ref="textEditorElement"></textarea>
                </div>

                <div class="form-row">
                    <label for="imageUpload">Image</label>
                    <InputFile id="imageUpload" OnChange="HandleImageUpload" />
                    @if (isUploadingImage)
                    {
                        <p class="muted">Uploading image...</p>
                    }
                    @if (!string.IsNullOrWhiteSpace(uploadError))
                    {
                        <p class="error">@uploadError</p>
                    }
                    @if (!string.IsNullOrWhiteSpace(newHomework.ImageUrl))
                    {
                        <p class="muted">Uploaded: <a href="@newHomework.ImageUrl" target="_blank">View image</a></p>
                    }
                </div>

                <div class="form-row">
                    <label>Date given</label>
                    <InputDate class="text-input" TValue="DateOnly" @bind-Value="newHomework.DateAssigned" />
                </div>

                <div class="form-row">
                    <label>Due date</label>
                    <InputDate class="text-input" TValue="DateOnly" @bind-Value="newHomework.DueDate" />
                </div>

                <div class="form-row">
                    <label>Teacher</label>
                    <InputText class="text-input" @bind-Value="teacherSearch" placeholder="Search teachers" />
                    <InputSelect class="text-input" @bind-Value="newHomework.TeacherId" @onchange="OnTeacherChanged">
                        <option value="">Select a teacher</option>
                        @foreach (var teacher in FilteredTeachers)
                        {
                            <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-row">
                    <label>Group (optional)</label>
                    <InputText class="text-input" @bind-Value="groupSearch" placeholder="Search groups" />
                    <InputSelect class="text-input" @bind-Value="newHomework.AssignedGroupId">
                        <option value="">Select a group</option>
                        @foreach (var group in FilteredGroups)
                        {
                            <option value="@group.GroupId">@group.GroupId (@group.Students.Count student(s))</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-row">
                    <label>Student Id (optional)</label>
                    <InputText class="text-input" @bind-Value="studentSearch" placeholder="Search students" />
                    <InputSelect class="text-input" @bind-Value="newHomework.AssignedStudentId">
                        <option value="">Assign to any student</option>
                        @foreach (var student in FilteredStudents)
                        {
                            <option value="@student.Id">@student.FirstName @student.LastName (@student.Id)</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-actions">
                    <button type="button" class="ghost" @onclick="CloseCreateModal">Cancel</button>
                    <button type="submit" class="primary">Save homework</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@if (!homeworkItems.Any())
{
    <p>No homework yet.</p>
}
else
{
    @foreach (var hw in homeworkItems)
    {
        <div class="card">
            <h3>@hw.Title</h3>
            <p><strong>Subject:</strong> @hw.Subject</p>
            <p><strong>Due:</strong> @hw.DueDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Teacher Id:</strong> @hw.TeacherId</p>
            <p><strong>Group:</strong> @hw.AssignedGroupId</p>
            <p><strong>Student:</strong> @hw.AssignedStudentId</p>
            <p><strong>Date given:</strong> @hw.DateAssigned</p>
            <p><strong>Due date:</strong> @hw.DueDate</p>
            <p>@hw.TextContent</p>
            @if (!string.IsNullOrWhiteSpace(hw.ImageUrl))
            {
                <p><a href="@hw.ImageUrl" target="_blank">View image</a></p>
            }
        </div>
    }
}

@code {
    private List<Teacher> teachers = new();
    private List<HomeworkItem> homeworkItems = new();
    private List<GroupSummaryDto> groups = new();
    private List<StudentSummaryDto> students = new();
    private List<StudentSummaryDto> allStudents = new();
    private static readonly List<string> subjects = new() { "Math", "Science", "History", "Language Arts", "Social Studies", "Art", "Music", "PE", "Other" };

    private HomeworkItem newHomework = new()
    {
        DateAssigned = DateOnly.FromDateTime(DateTime.UtcNow),
        DueDate = DateOnly.FromDateTime(DateTime.UtcNow).AddDays(7),
        Subject = subjects.First()
    };

    private string teacherSearch = string.Empty;
    private string groupSearch = string.Empty;
    private string studentSearch = string.Empty;
    private bool isUploadingImage;
    private string? uploadError;
    private bool showCreateModal;
    private bool shouldInitializeEditor;
    private bool editorInitialized;
    private ElementReference textEditorElement;
    private DotNetObjectReference<Homework>? dotNetRef;

    private IEnumerable<Teacher> FilteredTeachers => teachers
        .Where(t => t.Id == newHomework.TeacherId
            || string.IsNullOrWhiteSpace(teacherSearch)
            || $"{t.FirstName} {t.LastName}".Contains(teacherSearch, StringComparison.OrdinalIgnoreCase)
            || (!string.IsNullOrWhiteSpace(t.Email) && t.Email.Contains(teacherSearch, StringComparison.OrdinalIgnoreCase)));

    private IEnumerable<GroupSummaryDto> FilteredGroups => groups
        .Where(g => g.GroupId == newHomework.AssignedGroupId
            || string.IsNullOrWhiteSpace(groupSearch)
            || g.GroupId.Contains(groupSearch, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<StudentSummaryDto> FilteredStudents => students
        .Where(s => s.Id == newHomework.AssignedStudentId
            || string.IsNullOrWhiteSpace(studentSearch)
            || $"{s.FirstName} {s.LastName}".Contains(studentSearch, StringComparison.OrdinalIgnoreCase)
            || s.Id.ToString().Contains(studentSearch, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
        await LoadTeachers();
        await LoadHomework();
    }

    private async Task LoadTeachers()
    {
        teachers = await Http.GetFromJsonAsync<List<Teacher>>("api/teachers") ?? new();

        if (teachers.Any() && newHomework.TeacherId == 0)
        {
            newHomework.TeacherId = teachers.First().Id;
            await LoadGroupsForTeacher(newHomework.TeacherId);
        }
    }

    private async Task LoadStudents()
    {
        var studentEntities = await Http.GetFromJsonAsync<List<Student>>("api/students") ?? new();
        allStudents = studentEntities
            .Select(s => new StudentSummaryDto
            {
                Id = s.Id,
                FirstName = s.FirstName,
                LastName = s.LastName,
                IsChatBlocked = s.IsChatBlocked
            })
            .ToList();

        students = new(allStudents);
    }

    private async Task LoadHomework()
    {
        homeworkItems = await Http.GetFromJsonAsync<List<HomeworkItem>>("api/homework") ?? new();
    }

    private async Task CreateHomework()
    {
        var selectedTeacherId = newHomework.TeacherId;
        var response = await Http.PostAsJsonAsync("api/homework", newHomework);
        if (response.IsSuccessStatusCode)
        {
            var created = await response.Content.ReadFromJsonAsync<HomeworkItem>();
            if (created is not null)
            {
                homeworkItems.Add(created);
                newHomework = new()
                {
                    DateAssigned = DateOnly.FromDateTime(DateTime.UtcNow),
                    DueDate = DateOnly.FromDateTime(DateTime.UtcNow).AddDays(7),
                    TeacherId = selectedTeacherId,
                    Subject = subjects.First()
                };
                groupSearch = string.Empty;
                studentSearch = string.Empty;
                newHomework.AssignedGroupId = string.Empty;
                newHomework.AssignedStudentId = null;
                newHomework.ImageUrl = null;
                await LoadGroupsForTeacher(selectedTeacherId);
                if (editorInitialized)
                {
                    await JS.InvokeVoidAsync("homeworkEditor.updateData", textEditorElement, newHomework.TextContent ?? string.Empty);
                }
                await CloseCreateModal();
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (showCreateModal && shouldInitializeEditor)
        {
            dotNetRef ??= DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("homeworkEditor.init", textEditorElement, newHomework.TextContent ?? string.Empty, dotNetRef);
            editorInitialized = true;
            shouldInitializeEditor = false;
        }
    }

    private void OpenCreateModal()
    {
        uploadError = null;
        isUploadingImage = false;
        showCreateModal = true;
        shouldInitializeEditor = true;
    }

    private async Task CloseCreateModal()
    {
        showCreateModal = false;
        await DisposeEditorAsync();
    }

    [JSInvokable]
    public void OnEditorChanged(string content)
    {
        newHomework.TextContent = content;
    }

    private async Task DisposeEditorAsync()
    {
        if (editorInitialized)
        {
            try
            {
                await JS.InvokeVoidAsync("homeworkEditor.dispose", textEditorElement);
            }
            catch
            {
                // Ignored: disposal should not break the page if JS resources are unavailable.
            }
        }

        editorInitialized = false;
        shouldInitializeEditor = false;

        dotNetRef?.Dispose();
        dotNetRef = null;
    }

    public async ValueTask DisposeAsync()
    {
        await DisposeEditorAsync();
    }

    private async Task LoadGroupsForTeacher(int teacherId)
    {
        if (teacherId == 0)
        {
            groups.Clear();
            students = new(allStudents);
            return;
        }

        groups = await Http.GetFromJsonAsync<List<GroupSummaryDto>>($"api/teachers/{teacherId}/groups") ?? new();
        var teacherStudents = groups
            .SelectMany(g => g.Students)
            .GroupBy(s => s.Id)
            .Select(g => g.First())
            .ToList();

        students = teacherStudents.Any() ? teacherStudents : new(allStudents);
        newHomework.AssignedGroupId = string.Empty;
        newHomework.AssignedStudentId = null;
    }

    private async Task OnTeacherChanged(ChangeEventArgs args)
    {
        if (int.TryParse(args.Value?.ToString(), out var teacherId))
        {
            newHomework.TeacherId = teacherId;
            await LoadGroupsForTeacher(teacherId);
        }
        else
        {
            newHomework.TeacherId = 0;
            groups.Clear();
            students = new(allStudents);
        }
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        uploadError = null;
        isUploadingImage = true;

        try
        {
            var file = e.File;
            if (file is null)
            {
                uploadError = "Please select a file.";
                return;
            }

            using var content = new MultipartFormDataContent();
            await using var stream = file.OpenReadStream(10 * 1024 * 1024);
            var fileContent = new StreamContent(stream);
            fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue(file.ContentType);
            content.Add(fileContent, "file", file.Name);

            var response = await Http.PostAsync("api/uploads", content);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<UploadResponse>();
                newHomework.ImageUrl = result?.Url;
            }
            else
            {
                uploadError = "Upload failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            uploadError = $"Upload failed: {ex.Message}";
        }
        finally
        {
            isUploadingImage = false;
        }
    }

    private class UploadResponse
    {
        public string? Url { get; set; }
    }
}
